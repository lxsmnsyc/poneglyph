{
  "exclude": ["node_modules"],
  "include": ["src", "types", "router", "shared", "client", "server", "vite"],
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "target": "es2018"
  }
}
